{
  "profiles": [
    {
      "name": "main",
      "commands": [
        {
          "name": "builder",
          "execute": [
            "profile:builder"
          ],
          "help": {
            "text": "Build the project"
          }
        },
        {
          "name": "build",
          "execute": [
            "aux4 builder all"
          ],
          "help": {
            "text": "Build the project for all platforms"
          }
        }
      ]
    },
    {
      "name": "builder",
      "commands": [
        {
          "name": "darwin",
          "execute": [
            "GOOS=darwin GOARCH=amd64 go build -o ${packageDir}/package/dist/darwin/amd64/aux4-db ${packageDir}",
            "GOOS=darwin GOARCH=arm64 go build -o ${packageDir}/package/dist/darwin/arm64/aux4-db ${packageDir}"
          ],
          "help": {
            "text": "build the app for darwin"
          }
        },
        {
          "name": "linux",
          "execute": [
            "GOOS=linux GOARCH=amd64 go build -o ${packageDir}/package/dist/linux/amd64/aux4-db ${packageDir}",
            "GOOS=linux GOARCH=arm64 go build -o ${packageDir}/package/dist/linux/arm64/aux4-db ${packageDir}",
            "GOOS=linux GOARCH=386 go build -o ${packageDir}/package/dist/linux/386/aux4-db ${packageDir}"
          ],
          "help": {
            "text": "build the app for linux"
          }
        },
        {
          "name": "windows",
          "execute": [
            "GOOS=windows GOARCH=amd64 go build -o ${packageDir}/package/dist/windows/amd64/aux4-db.exe ${packageDir}",
            "GOOS=windows GOARCH=arm64 go build -o ${packageDir}/package/dist/windows/arm64/aux4-db.exe ${packageDir}",
            "GOOS=windows GOARCH=386 go build -o ${packageDir}/package/dist/windows/386/aux4-db.exe ${packageDir}"
          ],
          "help": {
            "text": "build the app for windows"
          }
        },
        {
          "name": "all",
          "execute": [
            "aux4 builder darwin",
            "aux4 builder linux",
            "aux4 builder windows",
            "chmod -R +x ${packageDir}/package/dist/*"
          ],
          "help": {
            "text": "build the app for all platforms"
          }
        }
      ]
    }
  ]
}
